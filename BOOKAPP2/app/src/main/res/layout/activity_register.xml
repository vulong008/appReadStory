    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            android:textAllCaps="false"
            android:id="@+id/btndk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng Ký"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="@drawable/roundedbutton"
            android:textColor="@color/white"></Button>
        <Button
            android:layout_marginLeft="50dp"
            android:textAllCaps="false"
            android:id="@+id/btnhuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/roundedbutton"></Button>
    </LinearLayout>
    <TextView
        android:id="@+id/textregister"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bằng cách nhấp vào bên trên, bạn đồng ý với Điều khoản Dịch vụ và Chính sách Bảo mật của BookApp "
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed"></TextView>
    <TextView
        android:id="@+id/textlogin"
        android:onClick="txtlogin"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn có tài khoản? Hãy đăng nhập"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/textcolor"></TextView>

