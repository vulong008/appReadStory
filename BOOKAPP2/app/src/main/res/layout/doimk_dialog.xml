<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroud_dialog"
    android:layout_margin="20dp"
    android:padding="16dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Đổi mật khẩu"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"></TextView>
    <TextView
        android:id="@+id/texttk"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="0dp"
        android:padding="5dp"
        android:text="Đổi mật khẩu"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Đổi mật khẩu thường xuyên giúp bạn bảo mật thông tin tốt hơn!"
        android:textColor="@color/black"></TextView>
    <!--    <com.google.android.material.textfield.TextInputLayout-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:padding="5dp">-->
    <!--        <com.google.android.material.textfield.TextInputEditText-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:textColor="@color/black"-->
    <!--            android:hint="Tài khoản"-->
    <!--            android:id="@+id/texttk"></com.google.android.material.textfield.TextInputEditText>-->
    <!--    </com.google.android.material.textfield.TextInputLayout>-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:padding="5dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/txtmkcu"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu cũ"
            android:textColor="@color/black"
            android:inputType="textPassword"></com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:padding="5dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/txtmkmoi"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu mới"
            android:textColor="@color/black"
            android:inputType="textPassword"></com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:padding="5dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/txtnhaplaimk"
            android:layout_height="wrap_content"
            android:hint="Nhập lại mật khẩu"
            android:textColor="@color/black"
            android:inputType="textPassword"></com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/huy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="HỦY"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:textColor="#00BCD4"
            ></Button>
        <Button
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ĐỒNG Ý"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:textColor="#00BCD4"
            ></Button>
    </LinearLayout>
</LinearLayout>