<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="8dp"
            app:cardCornerRadius="8dp">
            <ImageView
                android:id="@+id/imgbook"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/lovebook"></ImageView>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/black"
                android:id="@+id/tensach"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Tên sách"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:background="@color/white"
                    android:id="@+id/eye"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_baseline_remove_red_eye_24"></ImageButton>
                <TextView
                    android:id="@+id/texteye"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13 k"></TextView>
                <ImageButton
                    android:background="@color/white"
                    android:id="@+id/star"
                    android:layout_marginLeft="10dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_baseline_star_24"></ImageButton>
                <TextView
                    android:id="@+id/textstar"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,2 k"></TextView>
                <ImageButton
                    android:background="@color/white"
                    android:id="@+id/chuong"
                    android:layout_marginLeft="10dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_baseline_format_list_bulleted_24"></ImageButton>
                <TextView
                    android:id="@+id/textchuong"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_height="wrap_content"
                    android:text="120"></TextView>
            </LinearLayout>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/mota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả: "></TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>